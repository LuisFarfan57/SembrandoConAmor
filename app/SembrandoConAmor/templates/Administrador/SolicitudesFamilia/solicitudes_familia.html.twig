{% extends 'base.html.twig' %}

{% block title %}Solicitudes de familia{% endblock %}

{% block contenido %}
    <div class="container mt-5">
        <div class="row mb-3">
            <div class="col">
                <a href="{{ path('app_admin_inicio') }}">
                    <button class="btn btn-primary">Regresar</button>
                </a>
            </div>
        </div>

            <div class="row">
                <div class="col">
                    <div class="border p-5 text-center">
                        <table class="table table-striped table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nombre de integrante</th>
                                    <th scope="col">Teléfono</th>
                                    <th scope="col">Dirección</th>
                                    <th scope="col">Cantidad de integrantes</th>
                                    <th scope="col">Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for solicitud in solicitudes %}
                                <tr>
                                    <th scope="row">1</th>
                                    <td>{{ solicitud.nombreCompleto }}</td>
                                    <td>{{ solicitud.telefono }}</td>
                                    <td>{{ solicitud.direccion }}</td>
                                    <td>{{ solicitud.integrantes }}</td>
                                    <td>{{ solicitud.descripcion }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>No hay ninguna solicitud</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}